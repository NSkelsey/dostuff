<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the interactive help console"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/servicetoggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Toggle Service" />

    <Button
        android:id="@+id/queryByIDButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Find Spot by ID" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Show all event in list view" />

    <EditText
        android:id="@+id/SpotQueryNum"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="2" >

    </EditText>
 
</LinearLayout>